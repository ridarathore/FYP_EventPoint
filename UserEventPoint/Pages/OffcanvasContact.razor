@using ClassLibraryDAL
@using ClassLibraryEntity

            <div class="card">
                <div class="card-header">
                    Contact
                </div>
                <div class="card-body">
                    <blockquote class="blockquote mb-3">
                       
                        <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">Contact Vendor</button>
                    </blockquote>
                </div>
            </div>
      

@*OffCanvas details*@

 <div class="offcanvas offcanvas-end " style="width:70%;" tabindex="1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">

    
    <div class="container-fluid">        
                <div class="row">
            <h2 class="text-center pb-4 text-decoration-underline">@business</h2>
                </div>
                <table class="table table-hover">
                    <tbody>                
                        <tr>
                            <th >Owner Name</th>
                            <td> @ownername</td>                            
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@email</td>
                        </tr>
                        <tr><th scope="col">Landline</th><td>@landline</td></tr>
                        <tr><th scope="col">Phone No</th><td>@phoneno</td></tr>
                    </tbody>
                   
                    
   
                </table>
          </div>
 </div>
  
@code {
    [Parameter] public string business { get; set; }
    [Parameter] public string email { get; set; }
    [Parameter] public string ownername { get; set; }
    [Parameter] public string phoneno { get; set; }
    [Parameter] public string landline { get; set; }

}
